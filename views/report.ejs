<%- include("partials/post-header"); %>

<div class="container-fluid containerMarket">
  <form action="/report" method="post">
    <div class="form-group">
      <label>Report Type</label>
      <select name="reportType" class="form-control">
        <option selected>Software Issue</option>
        <option>Scammer/Troll</option>
      </select>
    </div>
    <div class="form-group">
      <label>Report Details</label>
      <textarea class="form-control" name="reportDetails" rows="6"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Report the Issue</button>
  </form>
</div>

