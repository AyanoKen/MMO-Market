<%- include("partials/header"); %>

<div class="container-fluid containerMarket">
  <form action="/addItem" method="post">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label>Item Name</label>
        <input type="text" class="form-control" name="itemName">
      </div>
      <div class="form-group col-md-6">
        <label>Price(in gold)</label>
        <input type="number" class="form-control" name="itemPrice">
      </div>
    </div>
    <div class="form-group">
      <label>In Game Name</label>
      <input type="text" class="form-control" name="userIGN">
    </div>
    <div class="form-group">
      <label>Server</label>
      <input type="text" class="form-control" name="userServer">
    </div>
    <button type="submit" class="btn btn-primary">Enlist</button>
  </form>
</div>

<%- include("partials/footer"); %>
